datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



// Mettre els models ici !!!!!
//voir pour affiner les relations !!!

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique
  password  String?
  method  String
  matchs  Match[] @relation("MatchPlayers")
  picture String?
  createdAt DateTime @default(now())
}


model Match {
  id    Int     @id @default(autoincrement())
  players  User[] @relation("MatchPlayers")
  isfinished  Boolean @default(false)
  isCancel  Boolean @default(false)
  createdAt DateTime @default(now())
}

